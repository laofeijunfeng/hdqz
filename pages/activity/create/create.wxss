/* pages/activity/create/create.wxss */
page {
  background-color: #F8F8F8;
}

.container .no_login {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .no_login image {
  height: 100rpx;
  width: 100rpx;
  margin-top: 200rpx;
}
.container .no_login .desc {
  font-size: 28rpx;
  color: #D9D9D9;
  margin: 40rpx 0;
}
.container .no_login .btn {
  height: 70rpx;
  width: 300rpx;
  border-radius: 40rpx;
  background-color: #005BAC;
  color: #ffffff;
  font-size: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 2rpx 2rpx 4rpx #A1A1A1;
}

.container .avatar {
  width: 100vw;
  height: 100vw;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}
.container .avatar image {
  width: 100vw;
  height: 100vw;
}
.container .avatar text {
  font-size: 30rpx;
  color: #999999;
}

.page__bd_spacing {
  padding: 30rpx;
}
.page__bd_spacing .weui-btn {
  background-color: #005BAC;
}