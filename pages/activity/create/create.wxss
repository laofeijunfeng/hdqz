}

.container .avatar {
  width: 100vw;
  height: 100vw;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}
.container .avatar image {
  width: 100vw;
  height: 100vw;
}
.container .avatar text {
  font-size: 30rpx;
  color: #999999;
}

